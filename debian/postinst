#!/bin/sh
# postinst script for chinachu
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        if ! getent passwd chinachu > /dev/null ; then
                echo 'Adding system-user for chinachu' 1>&2
                adduser --system --group --quiet --home /var/lib/chinachu \
                --disabled-login --force-badname chinachu
        fi
        
        EGREP_CHINACHU="\<chinachu\>"
        if [ "`getent group video | egrep $EGREP_CHINACHU`" = "" ] ; then
                addgroup chinachu video
        fi

        chown -R root:chinachu /etc/chinachu/ ; chmod -R 770 /etc/chinachu/config.json

	 if [ ! -e /var/log/chinachu  -a  \( -d /var/lib/chinachu/log \) ] ; then
		mv /var/lib/chinachu/log /var/log/chinachu
	 fi

        install -m 2755 -o chinachu -g chinachu -d /var/run/chinachu
        install -m 2755 -o chinachu -g chinachu -d /var/lib/chinachu
        install -m 2755 -o chinachu -g chinachu -d /var/lib/chinachu/data
        install -m 2755 -o chinachu -g chinachu -d /var/log/chinachu

        for SRC in `find /usr/share/chinachu/ -maxdepth 1 -mindepth 1 -name 'node_modules'  -prune -o -print`
        do
                ln -f -s -T $SRC /var/lib/chinachu/`basename $SRC`
        done

        install -m 644 -o chinachu /usr/share/chinachu/package.json /var/lib/chinachu/
        ( cd /var/lib/chinachu ; sudo -H -u chinachu /usr/bin/npm install )

        ln -f -s -T /usr/share/chinachu/node_modules/chinachu-common /var/lib/chinachu/node_modules/chinachu-common
        ln -f -s -T /usr/bin/chinachu /var/lib/chinachu/chinachu
        ln -f -s -T /var/log/chinachu /var/lib/chinachu/log
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

#!/bin/sh
# postinst script for chinachu
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        if ! getent passwd chinachu > /dev/null ; then
          echo 'Adding system-user for chinachu' 1>&2
          adduser --system --group --quiet --home /var/lib/chinachu \
            --disabled-login --force-badname chinachu
        fi
	addgroup chinachu video
	chown -R root:chinachu /etc/chinachu/ ; chmod -R 770 /etc/chinachu/config.json
        install -m 2755 -o chinachu -g chinachu -d /var/run/chinachu
        install -m 2755 -o chinachu -g chinachu -d /var/lib/chinachu
        install -m 2755 -o chinachu -g chinachu -d /var/lib/chinachu/log
        install -m 2755 -o chinachu -g chinachu -d /var/lib/chinachu/data
        install -m 644 -o chinachu /usr/share/chinachu/package.json /var/lib/chinachu/
        ( cd /var/lib/chinachu ; sudo -H -u chinachu /usr/bin/npm install )
        rm -rf /var/lib/chinachu/package.json

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

#!/bin/sh
# postrm script for chinachu
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    ;;


    purge)
        if getent passwd chinachu >/dev/null; then
                if [ -x /usr/sbin/deluser ]; then
                        deluser --system chinachu || echo "Could not remove chinachu user."
                fi
        fi
        if getent group chinachu >/dev/null; then
                if [ -x /usr/sbin/delgroup ]; then
                        delgroup --system chinachu || echo "Could not remove chinachu group."
                fi
        fi

        rm -f /etc/chinachu/config.json
        rm -d /etc/chinachu/ > /dev/null || echo "/var/lib/chinachu is not empty"

        rm -rf /var/run/chinachu/

        rm -f `find /var/lib/chinachu/ -type l`
        rm -rf /var/lib/chinachu/.cache/
        rm -rf /var/lib/chinachu/.npm/
        rm -rf /var/lib/chinachu/node_modules/
        rm -rf /var/lib/chinachu/tmp/
        rm -rf /var/lib/chinachu/data/
        rm -rf /var/log/chinachu
        rm -f  /var/lib/chinachu/rules.json
        rm -f  /var/lib/chinachu/package.json
        rm -d  /var/lib/chinachu/usr/bin
        rm -d  /var/lib/chinachu/usr/
        rm -d  /var/lib/chinachu/ > /dev/null || echo "/var/lib/chinachu is not empty"
    ;;


    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
